<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/aesdatabase?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping class="com.aes.model.Course"/>
    <mapping class="com.aes.model.Coursetaken"/>
    <mapping class="com.aes.model.Exam"/>
    <mapping class="com.aes.model.User"/>
    <mapping class="com.aes.model.Presentation"/>
    <mapping class="com.aes.model.Question"/>
    <mapping class="com.aes.model.Examtaken"/>
    <mapping class="com.aes.model.Choices"/>
  </session-factory>
</hibernate-configuration>
